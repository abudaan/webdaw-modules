{
  "name": "webdaw-modules",
  "version": "1.0.0",
  "description": "a set of modules for building a web-based DAW",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/webmidi": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3",
    "ts-loader": "^6.2.2",
    "typed-css-modules-loader": "0.0.18",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "basic.build": "webpack --config ./tests/basic/webpack.config.js",
    "basic.dev": "webpack-dev-server --config ./tests/basic/webpack.config.js --display-error-details"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abudaan/webdaw-modules.git"
  },
  "keywords": [
    "MIDI",
    "audio",
    "web",
    "MPE"
  ],
  "author": "abudaan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abudaan/webdaw-modules/issues"
  },
  "homepage": "https://github.com/abudaan/webdaw-modules#readme",
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "overrides": [
      {
        "files": ".scss",
        "options": {
          "parser": "scss"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "globals": {},
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-dupe-class-members": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/interface-name-prefix": "off"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "react/recommended"
    ]
  }
}
